    <style name="BlindButtonsStyle" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="cornerFamily">rounded</item>
